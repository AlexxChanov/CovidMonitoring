<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="#fff"
                />

            <corners
                android:radius="80dp"
                />
            <padding
                android:bottom="4dp"
                android:top="4dp"
                android:left="4dp"
                android:right="4dp"
                />

        </shape>

    </item>

    <item
        android:state_pressed="true">

        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="#4A4A4A"
                />

            <corners
                android:radius="20dp"
                />
            <padding
                android:bottom="4dp"
                android:top="4dp"
                android:left="4dp"
                android:right="4dp"
                />
        </shape>

    </item>

</selector>